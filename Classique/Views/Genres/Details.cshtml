@model Classique.Models.Genre

    

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h4>Albums correspondants</h4>
    <hr />
    <dl class="dl-horizontal">
       

        <dd>
            @Html.DisplayFor(model => model.Libelle_Abrege )
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
<div>
    <table class="table">
        <tr>
            <th>
                Titre
            </th>
            <th>
                Année
            </th>
            
            <th>
            </th>
        </tr>
        @foreach (var item in ViewBag.Albums)
            {
            <tr>
                <td>
                    @item.Titre_Album
                </td>
                <td>
                    @item.Annee_Album
                </td>
                
                <td>
                    @Html.ActionLink("Détail", "../Albums/Details", new { id = item.Code_Album })
                </td>
            </tr>
        }
    </table>
</div>

